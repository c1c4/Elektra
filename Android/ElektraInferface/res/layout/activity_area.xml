<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="br.com.example.elektrainferface.AreaActivity" >

    <ImageView
        android:id="@+id/imgvLampada"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_x="8dp"
        android:layout_y="8dp"
        android:src="@drawable/lampada" />

    <ToggleButton
        android:id="@+id/btLampadaArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="12dp"
        android:text="ToggleButton"
        android:textOff="Desligada"
        android:textOn="Ligada" />

    <ToggleButton
        android:id="@+id/btSensorTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="62dp"
        android:text="ToggleButton"
        android:textOff="Desligado"
        android:textOn="Ligado" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="210dp"
        android:layout_height="72dp"
        android:layout_x="13dp"
        android:layout_y="44dp"
        android:src="@drawable/sensortemperatura" />

    <Button
        android:id="@+id/btVoltarArea"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="276dp"
        android:text="Voltar" />

    <ToggleButton
        android:id="@+id/btSensorChuva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="108dp"
        android:text="ToggleButton"
        android:textOff="Desligado"
        android:textOn="Ligado" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_x="15dp"
        android:layout_y="108dp"
        android:src="@drawable/sensorchuva" />

    <ImageView
        android:id="@+id/imageLuminosidade"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_x="-330dp"
        android:layout_y="-12dp"
        android:src="@drawable/sensorluminosidade" />

    <ToggleButton
        android:id="@+id/btSensorLuminosidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="228dp"
        android:layout_y="171dp"
        android:text="ToggleButton"
        android:textOff="Desligado"
        android:textOn="Ligado" />

    <TextView
        android:id="@+id/txtTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="228dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_x="8dp"
        android:layout_y="163dp"
        android:src="@drawable/sensorluminosidade" />

</AbsoluteLayout>