<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="br.com.example.elektrainferface.SalaActivity" >

    <ImageView
        android:id="@+id/imgvLampada"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_x="8dp"
        android:layout_y="8dp"
        android:src="@drawable/lampada" />

    <ToggleButton
        android:id="@+id/btLampadaSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="12dp"
        android:text="ToggleButton"
        android:textOff="Desligada"
        android:textOn="Ligada" />

    <ToggleButton
        android:id="@+id/btSensorMovimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="62dp"
        android:text="ToggleButton"
        android:textOff="Desligado"
        android:textOn="Ligado" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_x="14dp"
        android:layout_y="56dp"
        android:src="@drawable/sensormovimento" />

    <Button
        android:id="@+id/btVoltarSala"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="187dp"
        android:text="Voltar" />

</AbsoluteLayout>